<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{ISO8601} %-5level %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="playground" level="info" />
    <root level="info">
        <appender-ref ref="console" />
    </root>
</configuration>